# === Required ===
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_app_id
STEAM_API_KEY=your_steam_web_api_key

# Register commands only to a dev guild while testing (optional)
DEV_GUILD_ID=

# === MySQL ===
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASS=changeme
DB_NAME=steam_discord_bot

# === Logging & debug ===
# DEBUG_LEVEL: silent|error|warn|info|debug|trace
DEBUG_LEVEL=info
DEBUG_HTTP=0
DEBUG_SQL=0

# === Discord embed styling ===
STEAM_EMBED_COLOR=#171A21

# === Sales (Steam store search) ===
# Sort options depend on Steam; "Discount_DESC" is good for deals
SALES_SORT_BY=Discount_DESC
SALES_REGION_CC=US
SALES_PAGE_SIZE=10
SALES_PAGE_TTL_MS=1200000
SALES_MAX_PAGES_CACHE=600
SALES_EXTEND_TTL_ON_HIT=true

# Prewarm (speed up button clicks)
SALES_PRECACHE_PAGES=3
SALES_PRECACHE_PREV_PAGES=1
SALES_PREWARM_SPACING_MS=200

# Full warmer (eventually cache all pages)
SALES_FULL_WARMER_ENABLED=true
SALES_FULL_WARMER_DELAY_MS=15000
SALES_FULL_WARMER_SPACING_MS=1200

# === GitHub commit announcer ===
GITHUB_ANNOUNCER_ENABLED=false
GITHUB_OWNER=
GITHUB_REPO=
GITHUB_BRANCH=
GITHUB_TOKEN=
GITHUB_POLL_SECONDS=60
GITHUB_MAX_CATCHUP=5
GITHUB_ANNOUNCE_ON_START=false
GITHUB_EMBED_COLOR=#24292E
GITHUB_WEBHOOK_ENABLED=false
GITHUB_WEBHOOK_PORT=
GITHUB_WEBHOOK_PATH=/github-webhook
GITHUB_WEBHOOK_SECRET=

# Poll intervals (seconds)
POLL_SECONDS=300
OWNED_POLL_SECONDS=3600
NOWPLAYING_POLL_SECONDS=120
LEADERBOARD_POLL_SECONDS=300
SALES_POLL_SECONDS=86400

# Concurrency & schema cache
MAX_CONCURRENCY=4
SCHEMA_TTL_HOURS=168

# Flags & spam guards
SEED_ON_FIRST_RUN=true
SEED_IF_ZERO=true
OWNED_SEED_ON_FIRST_RUN=true
PLAYTIME_SEED_ON_FIRST_RUN=true
NOWPLAYING_SEED_ON_FIRST_RUN=true
BACKFILL_LIMIT=5
OWNED_ANNOUNCE_LIMIT=5
OWNED_REMOVAL_GRACE_MINUTES=30

# Milestones & rarity
PLAYTIME_MARKS=10,25,50,100
ACHIEVEMENT_MARKS=25,50,75,100
RARE_PCT=1.0
RARITY_TTL_HOURS=24

# Now-playing session rules
NOWPLAYING_CONFIRM_SECONDS=60
NOWPLAYING_IDLE_TIMEOUT_SECONDS=180
SESSION_MIN_MINUTES=10

# Recent items cap in some calls
RECENT_LIMIT=10

# Steam Store scraping (override UA if needed)
STORE_UA=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/126.0.0.0 Safari/537.36
